<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Categorie', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Category</th>
        </tr>
      </thead>
      <tbody>
       <% @categorie.ids.map do |id| %>
        <tr>
         
          <td>
            <%= @categorie[id -1].name %>
          </td>
          <% end %>
          </tr>
      </tbody>
    </table>

  </div>

</section>
